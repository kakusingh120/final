        // Function to generate NGO cards
        function generateNGOCards() {
            const container = document.getElementById('ngo-container');
            
            ngoData.organizations.forEach(ngo => {
                // Extract phone number from contact if available
                let phone = '';
                if (ngo.contact.includes('Tel:') || ngo.contact.includes('+91')) {
                    const telMatch = ngo.contact.match(/Tel: ([+\d\s\-]+)/);
                    const phoneMatch = ngo.contact.match(/(\+91[\d\s\-]+)/);
                    phone = telMatch ? telMatch[1] : (phoneMatch ? phoneMatch[0] : '');
                }
                
                // Extract email from contact if available
                let email = '';
                const emailMatch = ngo.contact.match(/([a-zA-Z0-9._-]+@[a-zA-Z0-9._-]+\.[a-zA-Z0-9_-]+)/);
                if (emailMatch) {
                    email = emailMatch[0];
                }
                
                const card = document.createElement('div');
                card.className = 'bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow';
                card.innerHTML = `
                    <div class="flex items-center mb-4">
                        <img src="ngo images/${ngo.image}" 
                             class="w-12 h-12 rounded-full object-cover border-2 border-yellow-500 mr-4">
                        <div>
                            <h3 class="font-semibold text-lg">${ngo.name}</h3>
                            <p class="text-gray-600 text-sm flex items-center">
                                <i class="fas fa-map-marker-alt mr-1 text-yellow-500"></i> ${ngo.location}
                            </p>
                        </div>
                    </div>
                    <p class="text-gray-700 mb-4 text-sm">
                        ${ngo.focus}
                    </p>
                    <div class="flex justify-between items-center">
                        ${phone ? `<a href="tel:${phone.trim()}" class="text-yellow-600 hover:text-yellow-700 text-sm">
                            <i class="fas fa-phone mr-1"></i> Call
                        </a>` : '<span class="text-gray-400 text-sm">No phone</span>'}
                        ${email ? `<a href="mailto:${email}" class="text-yellow-600 hover:text-yellow-700 text-sm">
                            <i class="fas fa-envelope mr-1"></i> Email
                        </a>` : '<span class="text-gray-400 text-sm">No email</span>'}
                        <a href="${ngo.website}" target="_blank" class="text-yellow-600 hover:text-yellow-700 text-sm">
                            <i class="fas fa-globe mr-1"></i> Website
                        </a>
                    </div>
                `;
                
                container.appendChild(card);
            });
        }

        // Call the function when the page loads
        window.onload = generateNGOCards;
    </script>
